<%- include('partials/header',{title: 'Home'})%>
<h1 class="mb-4">All Blog Posts</h1>
<% if(posts.length === 0){ %>
<div class="alert alert-info">No posts available.</div>
<% } %>
<div class="row row-cols-1 row-cols-md-2 g-4">
    <% posts.forEach((post,index) => { %>
        <div class="col">
            <div class="card h-100">
                <% if(post.image){ %>
                    <img src="<%= post.image %>" class="card-img-top" style="height: 20rem;  ">
                 <% } %>
                <div class="card-body">
                    <h5 class="card-title"><%= post.title %></h5>
                    <p class="card-text"><%= post.content %></p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="/edit/<%= index%>" class="btn btn-sm btn-primary">Edit</a>
                    <form method="POST" action="/delete/<%= index %>" >
                        <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </div>              
            </div>
        </div>
    <% }) %>
</div>
<%- include('partials/footer') %>