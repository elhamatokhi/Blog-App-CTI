<%- include('partials/header', {title: 'Add Post'}) %>

<h2 class="mb-4">Edit Post</h2>

<form method="POST" action="/create" class="card p-4 shadow-sm" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="" class="form-label">Title</label>
        <input name="title" class="form-control" required>
    </div>
    <div class="mb-3">
        <label class="form-lavel">Content</label>
        <textarea name="content" rows="5" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Image(Optional)</label>
        <input type="file" name="image" class="form-control">
    </div>
    <button class="btn btn-success">Add Post</button>
</form>

<%- include('partials/footer') %>